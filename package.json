{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "A very simple boilerplate for ReactJS",
  "scripts": {
    "start": "npm run prod",
    "dev": "npm run build:dev && npm run start-dev-server",
    "prod": "npm run build:prod && npm run start-server",
    "build:dev": "NODE_ENV=development webpack --progress --colors",
    "build:prod": "NODE_ENV=production webpack --progress --colors",
    "linter": "eslint src -f html --ext .jsx --ext .js -o lint-report.html",
    "start-dev-server": "NODE_ENV=development webpack-dev-server",
    "start-server": "NODE_ENV=production webpack-dev-server"
  },
  "author": "Scott Rees",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "path": "^0.12.7",
    "preload-webpack-plugin": "^1.2.2",
    "script-ext-html-webpack-plugin": "^1.8.1",
    "sw-precache-webpack-plugin": "^0.11.3",
    "uglify-js": "^3.0.15",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "html-webpack-plugin": "^2.28.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "uglify-es": "git://github.com/mishoo/UglifyJS2.git#harmony",
    "uglifyjs-webpack-plugin": "^0.4.3"
  }
}
